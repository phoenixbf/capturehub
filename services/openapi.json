{
    "openapi": "3.0.0",

    "supportedSubmitMethods": [],

    "info": {
        "version": "1.0.0",
        "title": "CaptureHub API",
        "description": "This is the REST API for CaptureHub service, developed under H2IOSC project as part of task 7.7 (Immersive Analytics Hub). The service allows remote devices, labs, research nodes, online web-applications or public exhibits to track interactive sessions. The initial request allows to define custom attributes: if successful, a session ID is returned to client.",

        "__contact": {
            "name": "Swagger API Team",
            "email": "apiteam@swagger.io",
            "url": "http://swagger.io"
        },
    
        "__license": {
            "name": "Apache 2.0",
            "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },

    "__servers": [
        {
            "url": "https://...."
        }
    ],

    "paths": {
        "/api/session": {
            "post":{
                "tags":["session"],
                "summary": "Request a new session",
                "description": "Request a new session, providing attributes to track and optional group and friendly name",
                "requestBody":{
                    "description": "Fields (attributes) in the form of strings array. Optional group ID and friendly actor name",
                    "content":{
                        "application/json":{
                            "example":{
                                "fields": ["x","y","z"],
                                "groupid": "experiment01",
                                "actor": "friendlyName"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "Successful operation, returns session ID",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "properties":{
                                        "id":{
                                            "type": "string",
                                            "description": "Session ID"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },

            "put":{
                "tags":["session"],
                "summary": "Update an existing session",
                "description": "Append new data chunk to an existing session",
                "requestBody":{
                    "description": "request body contains session ID and data in the form of comma-separated values and newlines for multiple rows",
                    "content":{
                        "application/json":{
                            "example":{
                                "id": "session-id",
                                "data": "100,23,7\n70,25,9"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "Successful operation"
                    }
                }
            }
        },

        "/api/sessions/{id}":{
            "get":{
                "tags":["session"],
                "summary": "Retrieve a session",
                "description": "Retrieve session file (CSV) by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the session",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "f",
                        "in": "query",
                        "description": "format (ascii, json). If not defined, CSV format is returned",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                  ],
                "responses":{
                    "200":{
                        "description": "Successful operation"
                    }
                }
            }
        },

        "/api/sessions/{gid}/{id}":{
            "get":{
                "tags":["session"],
                "summary": "Retrieve a session in a group",
                "description": "Retrieve session file (CSV) by group ID and session ID",
                "parameters": [
                    {
                        "name": "gid",
                        "in": "path",
                        "description": "Group ID of the session",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the session",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "f",
                        "in": "query",
                        "description": "format (ascii, json). If not defined, CSV format is returned",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                  ],
                "responses":{
                    "200":{
                        "description": "Successful operation"
                    }
                }
            }
        }
    }
}